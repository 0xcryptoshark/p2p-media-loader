  },
  "dependencies": {
    "bittorrent-tracker": "9.2.3",
    "m3u8-parser": "3.0.0"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.41",
    "@types/node": "^6.0.81",
    "@types/text-encoding": "0.0.31",
    "babili": "^0.1.4",
    "browserify": "^14.4.0",
    "mocha": "^3.4.2",
    "ts-mockito": "^2.0.2",
    "ts-node": "^3.2.0",
    "tsify": "^3.0.1",
    "tslint": "^5.5.0",
    "typescript": "^2.4.1"
  }
}
