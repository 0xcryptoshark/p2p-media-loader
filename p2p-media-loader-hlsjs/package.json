{
  "name": "p2p-media-loader-hlsjs",
  "description": "P2P Media Loader hlsjs integration",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "compile": "rimraf ./dist/ && tsc && copyfiles -f ./lib/*.js ./dist/",
    "lint": "tslint -c ./tslint.json -p ./tsconfig.json",
    "build": "npm run compile && browserify -r ./dist/index.js:p2p-media-loader-hlsjs ./dist/browser-init.js --exclude p2p-media-loader-core > p2p-media-loader-hlsjs.js",
    "refresh-core-dependency": "rimraf ./node_modules/p2p-media-loader-core/ && npm install && copyfiles -f ./node_modules/p2p-media-loader-core/p2p-media-loader-core.js ./",
    "test": "mocha -r ts-node/register test/*.test.ts"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://git.witua.com/novage/p2p-media-loader.git"
  },
  "dependencies": {
    "m3u8-parser": "3.0.0",
    "p2p-media-loader-core": "../p2p-media-loader-core"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.41",
    "@types/node": "^6.0.81",
    "@types/sinon": "^2.3.3",
    "browserify": "^14.4.0",
    "copyfiles": "^1.2.0",
    "rimraf": "^2.6.1",
    "mocha": "^3.4.2",
    "sinon": "^2.4.0",
    "ts-mockito": "^2.0.2",
    "ts-node": "^3.2.0",
    "tsify": "^3.0.1",
    "tslint": "^5.5.0",
    "typescript": "^2.4.1"
  }
}
