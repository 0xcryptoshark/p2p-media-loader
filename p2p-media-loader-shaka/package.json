{
  "name": "p2p-media-loader-shaka",
  "description": "P2P Media Loader Shaka Player integration",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "compile": "rimraf ./dist && tsc && copyfiles -f ./lib/*.js ./dist && rimraf ./build && mkdirp ./build",
    "browserify": "browserify -r ./dist/index.js:p2p-media-loader-shaka ./dist/browser-init.js --exclude p2p-media-loader-core > ./build/p2p-media-loader-shaka.js",
    "minify": "uglifyjs ./build/p2p-media-loader-shaka.js -m -c > ./build/p2p-media-loader-shaka.min.js",
    "refresh-dependencies": "copyfiles -f ./node_modules/p2p-media-loader-core/build/p2p-media-loader-core*.js ./build",
    "build": "npm run compile && npm run browserify && npm run minify && npm run refresh-dependencies",
    "lint": "tslint -c ./tslint.json -p ./tsconfig.test.json",
    "test": "mocha -r ts-node/register test/*.test.ts"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://git.witua.com/novage/p2p-media-loader.git"
  },
  "dependencies": {
    "p2p-media-loader-core": "^0.0.1"
  },
  "devDependencies": {
    "@types/debug": "^0.0.30",
    "@types/mocha": "^2.2.48",
    "@types/node": "^6.0.98",
    "@types/sinon": "^2.3.3",
    "browserify": "^14.4.0",
    "browserify-versionify": "^1.0.6",
    "copyfiles": "^1.2.0",
    "mkdirp": "^0.5.1",
    "mocha": "^3.4.2",
    "rimraf": "^2.6.1",
    "sinon": "^2.4.0",
    "ts-mockito": "^2.2.9",
    "ts-node": "^3.2.0",
    "tslint": "^5.5.0",
    "typescript": "^2.7.1",
    "uglify-js": "^3.3.9"
  },
  "browserify": {
    "transform": [
      "browserify-versionify"
    ]
  }
}
