{
  "name": "p2p-media-loader-core",
  "description": "P2P Media Loader core function",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "compile": "rimraf ./dist/ && tsc && copyfiles -f ./lib/*.js ./dist/",
    "lint": "tslint -c ./tslint.json -p ./tsconfig.json",
    "build": "npm run compile && browserify -r ./dist/index.js:p2p-media-loader-core ./dist/browser-init.js > p2p-media-loader-core.js",
    "build-to-hlsjs": "npm run build && copyfiles -f ./p2p-media-loader-core.js ../p2p-media-loader-hlsjs/",
    "refresh-dependencies": "npm update"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://git.witua.com/novage/p2p-media-loader.git"
  },
  "dependencies": {
    "bittorrent-tracker": "9.2.3"
  },
  "devDependencies": {
    "@types/node": "^6.0.81",
    "@types/text-encoding": "0.0.31",
    "browserify": "^14.4.0",
    "copyfiles": "^1.2.0",
    "rimraf": "^2.6.1",
    "ts-node": "^3.2.0",
    "tslint": "^5.5.0",
    "typescript": "^2.4.1"
  }
}
