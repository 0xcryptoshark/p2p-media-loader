{
  "name": "p2p-media-loader-core",
  "description": "P2P Media Loader core function",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "compile": "rimraf ./dist/ && tsc && copyfiles -f ./lib/*.js ./dist/",
    "lint": "tslint -c ./tslint.json -p ./tsconfig.test.json",
    "build": "npm run compile && npm run browserify && npm run minify",
    "browserify": "browserify -r ./dist/index.js:p2p-media-loader-core ./dist/browser-init.js > p2p-media-loader-core.js",
    "minify": "uglifyjs p2p-media-loader-core.js > p2p-media-loader-core.min.js",
    "refresh-dependencies": "npm update",
    "test": "mocha -r ts-node/register test/*.test.ts"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://git.witua.com/novage/p2p-media-loader.git"
  },
  "dependencies": {
    "bittorrent-tracker": "^9.2.3",
    "events": "^1.1.1",
    "buffer": "^5.0.8",
    "crypto-browserify": "^3.11.1",
    "get-browser-rtc": "^1.0.2",
    "debug": "^3.0.0"
  },
  "devDependencies": {
    "@types/debug": "^0.0.30",
    "@types/mocha": "^2.2.41",
    "@types/node": "^6.0.81",
    "@types/text-encoding": "^0.0.31",
    "browserify": "^14.4.0",
    "copyfiles": "^1.2.0",
    "get-browser-rtc": "^1.0.2",
    "rimraf": "^2.6.1",
    "mocha": "^3.4.2",
    "ts-mockito": "^2.0.2",
    "ts-node": "^3.2.0",
    "tslint": "^5.5.0",
    "typescript": "^2.4.1",
    "uglify-js": "^3.1.10"
  }
}
